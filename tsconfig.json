{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./app/*"],
      "#app/*": ["./app/*"]
    }
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/node_modules/.pnpm/**",
    ".nuxt/node_modules/**",
    "./node_modules/**",
    "node_modules",
    "dist",
    ".output"
  ]
}
